<p id="notice"><%= notice %></p>

<h1>Listing Users Tasks</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users_tasks.each do |users_task| %>
      <tr>
        <td><%= link_to 'Show', users_task %></td>
        <td><%= link_to 'Edit', edit_users_task_path(users_task) %></td>
        <td><%= link_to 'Destroy', users_task, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

